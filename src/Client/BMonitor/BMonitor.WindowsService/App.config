  <BMonitor>
    <add key="deviceId" value="E534177C-04D8-47AA-8F33-CAB74571D2F5"/>
    <add key="monitorPath" value="/Monitors/"/>
    <add key="enableCommandConnection" value="true"/>
    <add key="enablePerformanceMonitoring" value="false"/>
    <add key="enableStatusMonitoring" value="false"/>
  </BMonitor>

  <log4net>

    <appender name="Console" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-5level: %message%newline" />
      </layout>
    </appender>

    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="C:\_\BMonitorService.txt" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="5" />
      <maximumFileSize value="10MB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %level %logger - %message%newline" />
      </layout>
    </appender>

    <!-- Set the default logging level and add the active appenders -->
    <root>
      <level value="DEBUG" />
      <appender-ref ref="Console" />
      <appender-ref ref="RollingFileAppender" />
    </root>

  </log4net>
</configuration>