<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    <section name="BMonitor" type="BMonitor.Service.Configuration.BMonitorSection, BMonitor.Service" />
    <section name="quartz" type="System.Configuration.NameValueSectionHandler, System, Version=1.0.5000.0,Culture=neutral, PublicKeyToken=b77a5c561934e089" />
  </configSections>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
  </startup>

  <quartz>
    <add key="quartz.scheduler.instanceName" value="JobScheduler" />
 
    <add key="quartz.threadPool.type" value="Quartz.Simpl.SimpleThreadPool, Quartz" />
    <add key="quartz.threadPool.threadCount" value="10" />
    <add key="quartz.threadPool.threadPriority" value="Normal" />
 
    <add key="quartz.jobStore.misfireThreshold" value="60000" />
    <add key="quartz.jobStore.type" value="Quartz.Simpl.RAMJobStore, Quartz" />
 
    <add key="quartz.plugin.xml.type" value="Quartz.Plugin.Xml.XMLSchedulingDataProcessorPlugin, Quartz"/>  
    <add key="quartz.plugin.xml.fileNames" value="~/jobs.config" />
  </quartz>
  
  <!--deviceId="41123782-cf24-4d20-9719-e657ee012531"-->
  <BMonitor>
    <service
      enableCommandConnection="true"
      enablePerformanceMonitoring="true"
      enableStatusMonitoring="true"
      handlerPath="/Handlers/"
      monitorPath="/Monitors/"
      password="password"
      username="rritc1"/>
    <!--<jobs>
      <job name="FreeDiskSpace" MonitorType="BMonitor.Monitors.FreeDiskSpace, BMonitor.Monitors"/>
    </jobs>-->
  </BMonitor>

  <system.serviceModel>

    <behaviors>
      <endpointBehaviors>
        <behavior name="BlobBehavior">
          <clientCredentials>
            <serviceCertificate>
              <authentication certificateValidationMode="None"/>
            </serviceCertificate>
          </clientCredentials>
        </behavior>
      </endpointBehaviors>
    </behaviors>

    <bindings>
      <netHttpsBinding>
        <binding name="BlobBinding">
          <security mode="TransportWithMessageCredential">
            <message clientCredentialType="UserName"/>
          </security>
        </binding>
      </netHttpsBinding>
    </bindings>

    <client>
      <endpoint address="https://dev.blobservice.rritc.com/DeviceStatusService.svc" binding="netHttpsBinding" bindingConfiguration="BlobBinding"
                behaviorConfiguration="BlobBehavior" contract="Blob.Contracts.ServiceContracts.IDeviceStatusService" name="DeviceStatusService">
        <identity>
          <dns value="blobservice.rritc.com" />
        </identity>
      </endpoint>
      <!--<endpoint address="https://dev.blobservice.rritc.com/IdentityService.svc" binding="netHttpsBinding" bindingConfiguration="BlobBinding" behaviorConfiguration="BlobBehavior" contract="Blob.Contracts.Security.IIdentityService" name="IdentityService">
        <identity>
          <dns value="dev.blobservice.rritc.com" />
        </identity>
      </endpoint>-->

      <endpoint address="https://dev.blobservice.rritc.com/DeviceConnectionService.svc"
          binding="netHttpsBinding"
          bindingConfiguration="BlobBinding"
          behaviorConfiguration="BlobBehavior"
          contract="Blob.Contracts.ServiceContracts.IDeviceConnectionService"
          name="DeviceConnectionService">
        <identity>
          <dns value="blobservice.rritc.com" />
        </identity>
      </endpoint>
      
    </client>
  </system.serviceModel>
  
  <log4net>

    <appender name="Console" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-5level: %message%newline" />
      </layout>
    </appender>

    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="C:\_\BMonitorService.txt" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="5" />
      <maximumFileSize value="10MB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %level %logger - %message%newline" />
      </layout>
    </appender>

    <!-- Set the default logging level and add the active appenders -->
    <root>
      <level value="DEBUG" />
      <appender-ref ref="Console" />
      <appender-ref ref="RollingFileAppender" />
    </root>

  </log4net>
</configuration>