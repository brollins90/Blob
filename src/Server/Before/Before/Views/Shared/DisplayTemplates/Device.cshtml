@using Before.ViewModels
@model Before.ViewModels.DeviceViewModel

@{
    var statusCssClass = "status-unknown";
    switch (Model.CurrentStatus)
    {
        case StatusValue.Critical:
            statusCssClass = "status-critical";
            break;
        case StatusValue.Information:
            statusCssClass = "status-information";
            break;
        case StatusValue.Ok:
            statusCssClass = "status-ok";
            break;
        case StatusValue.Unknown:
            statusCssClass = "status-unknown";
            break;
        case StatusValue.Warning:
            statusCssClass = "status-warning";
            break;
    }
}
<hr />
<div class="row @statusCssClass">
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
        <h3>@Model.FirstName @Model.LastName</h3>
        <p>@Model.FirstName was born on @Model.BirthDate.ToString("D").</p>
        <p>Likes Music: @Html.DisplayFor(model => model.LikesMusic)</p>
        @{
            ViewBag.ListDescription = "Skills:";
            Html.RenderPartial("_StringCollection", Model.Skills);
        }
    </div>
</div>

