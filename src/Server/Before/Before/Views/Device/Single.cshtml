@using Before.Infrastructure.Extensions
@model Blob.Contracts.Models.ViewModels.DeviceSingleVm
@{
    ViewBag.Title = "Device";
}

<h2>@ViewBag.Title.</h2>

<div class="pull-right">
    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Edit", "Edit", "Device", routeValues: new { id = Model.DeviceId }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
    &nbsp;
    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-remove-sign'></span>", "Disable", "Disable", "Device", routeValues: new { id = Model.DeviceId }, htmlAttributes: new { data_modal = "", @class = "btn btn-danger" })
</div>

<div class="row">
    <div class="col-md-12">

        <div id="accordion" class="panel-group">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#device">Device</a>
                    </h4>
                </div>
                <div id="manage" class="panel-collapse collapse in">
                    <div class="panel-body">
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.DeviceId)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.DeviceId)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.DeviceName)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.DeviceName)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.DeviceType)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.DeviceType)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.LastActivityDate)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.LastActivityDate)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.CreateDate)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.CreateDate)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Enabled)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Enabled)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Status)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Status)
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#monitors">Monitors</a>
                    </h4>
                </div>
                <div id="monitors" class="panel-collapse collapse in">
                    <div class="panel-body">
                        @{ Html.RenderAction("MonitorList", "Status", routeValues: new { deviceId = Model.DeviceId });}
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#status">Status</a>
                    </h4>
                </div>
                <div id="status" class="panel-collapse collapse in">
                    <div class="panel-body">
                        @{ Html.RenderAction("PageForDevice", "Status", routeValues: new { deviceId = Model.DeviceId });}
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#performance">Performance</a>
                    </h4>
                </div>
                <div id="performance" class="panel-collapse collapse in">
                    <div class="panel-body">
                        @{ Html.RenderAction("PageForDevice", "Performance", routeValues: new { deviceId = Model.DeviceId });}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
